{
    "manifest_version": 3,
    "name": "Word and phrase highlighter",
    "version": "1.0",
    "description": "Highlights specific words or phrases, made to assist in Coding Crew DLA production queues.",
    "permissions": [
      "storage",
      "activeTab"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": [
          "<all_urls>"
        ],
        "js": ["content.js"]
      }
    ]
  }